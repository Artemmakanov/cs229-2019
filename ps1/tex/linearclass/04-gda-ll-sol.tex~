\begin{answer}


Let's solve it for $\phi$:
\begin{equation*}
\ell(\phi, \mu_{0}, \mu_1, \Sigma) = \prod_{i=1}^\nexp \frac{1}{(2\pi)^{\di/2} |\Sigma|^{1/2}}
		\exp(-\frac{1}{2}(x^{(i)}-\mu_{y^{(i)}})^T \Sigma^{-1} (x^{(i)}-\mu_{y^{(i)}})) (1\{y^{(i)} = 1\}\phi + 1\{y^{(i)} = 0\}(1 - \phi)) = 
\end{equation*}

\begin{equation*}
\sum_{i=1}^\nexp [\log(\frac{1}{(2\pi)^{\di/2} |\Sigma|^{1/2}}) -\frac{1}{2}(x^{(i)}-\mu_{y^{(i)}})^T \Sigma^{-1} (x^{(i)}-\mu_{y^{(i)}}) + \log(1\{y^{(i)} = 1\}\phi + 1\{y^{(i)} = 0\}(1 - \phi))]
\end{equation*}

\begin{equation*}
\nabla \phi\ell(\phi, \mu_{0}, \mu_1, \Sigma) = \nabla \phi \sum_{i=1}^\nexp 1\{y^{(i)} = 1\}\log(\phi) + 1\{y^{(i)} = 0\}\log(1 - \phi) = 0
\end{equation*}

\begin{equation*}
\sum_{i=1}^\nexp \frac{1\{y^{(i)} = 1\}}{\phi} - \sum_{i=1}^\nexp \frac{1\{y^{(i)} = 0\}}{1 - \phi} = 0
\end{equation*}

\begin{equation*}
\sum_{i=1}^\nexp \frac{1\{y^{(i)} = 1\} - \phi}{\phi(1-\phi)} = 0, \\
\phi = \frac{1}{\nexp} \sum_{i=1}^\nexp 1\{y^{(i)} = 1\}
\end{equation*}

Let's solve it for $\mu_0$. For $\mu_1$ is similarly:
\begin{equation*}
\nabla \mu_1(\ell(\phi, \mu_{0}, \mu_1, \Sigma)) = \nabla \mu_1(-\frac{1}{2}(x^{(i)}-\mu_{y^{(i)}})^T \Sigma^{-1} (x^{(i)}-\mu_{y^{(i)}})) = 
\end{equation*}

\begin{equation*}
-\frac{1}{2} \sum_{i=1}^\nexp \nabla \mu_1 (x^{(i)})^{T} \Sigma^{-1} x^{(i)} + (\mu_1^{(i)})^{T} \Sigma^{-1} \mu_1^{(i)} - 2\mu_1^{(T)}\Sigma^{-1}x^{(i)}(1\{y^{(i)} = 1\}) = 
\end{equation*}

\begin{equation*}
-\frac{1}{2} \sum_{i=1}^\nexp (2 \Sigma^{-1} \mu_1^{(i)} - 2\Sigma^{-1}x^{(i)}(1\{y^{(i)} = 1\}) = 0
\end{equation*}

\begin{equation*}
\sum_{i=1}^\nexp 1\{y^{(i)} = 1\}) [\mu_1 - x^{(i)}] = 0
\end{equation*}

\begin{equation*}
\mu_1 \sum_{i=1}^\nexp 1\{y^{(i)} = 1\}) = \sum_{i=1}^\nexp 1\{y^{(i)} = 1\})x^{(i)}
\end{equation*}

\begin{equation*}
\mu_{0} = \frac{\sum_{i=1}^\nexp 1\{y^{(i)} = {1}\} x^{(i)}}{\sum_{i=1}^\nexp
1\{y^{(i)} = {1}\}}
\end{equation*}

\end{answer}
